<%- include('../../partials/header') %>

<h1><%= title %></h1>

<form method="POST" action="/service-request" class="service-request-form">
    <div class="form-group">
        <label for="vehicle">vehicle info (make, model, year)</label>
        <input type="text" name="vehicle" id="vehicle" required>
    </div>

    <div class="form-group">
        <label for="vehiclePlate">vehicle plate</label>
        <input type="text" name="vehiclePlate" id="vehiclePlate" max="10" required>
    </div>

    <div class="form-group">
        <label for="serviceType">
            <label for="serviceType">Service Type</label>
            <select name="serviceType" id="serviceType">
                <option value="oil change">oil change</option>
                <option value="inspection">inpsection</option>
                <option value="replace tire">replace tire(s)</option>
                <option value="replace windsheild">replace windsheild</option>
            </select>
        </label>
    </div>

    <div class="form-group">
        <label for="notes">Notes</label>
        <textarea id="notes" name="notes" rows="6" placeholder="Please provide details about your service request..." minlength="10" required></textarea>
    </div>


    <button type="submit">Send Message</button>
</form>

<%- include('../../partials/footer') %>
