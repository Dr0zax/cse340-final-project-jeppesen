<%- include('../../partials/header') %>

<h1><%= title %></h1>

<form method="POST" action="/review" class="review-form">
    <div class="form-group">
        <label for="vehicle">vehicle</label>
        <select name="vehicle" id="vehicle">
            <% vehicles.forEach(vehicle => { %>
                <option value="<%= vehicle.slug %>"><%= vehicle.make %> <%= vehicle.model %> <%= vehicle.year %></option>
            <% }); %>
        </select>
    </div>

    <div class="form-group">
        <label for="rating">
            <label for="rating">Rating</label>
            <select name="rating" id="rating">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </label>
    </div>

    <div class="form-group">
        <label for="comment">Comment</label>
        <textarea id="comment" name="comment" rows="6" placeholder="Please provide details about your review..." minlength="10" required></textarea>
    </div>

    <button type="submit">Send Message</button>
</form>

<%- include('../../partials/footer') %>
